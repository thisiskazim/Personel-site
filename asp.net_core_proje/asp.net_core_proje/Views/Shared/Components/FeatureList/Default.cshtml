@model List<Feature>
<header id="Feature">
    <div class="cover bg-light">
        <div class="container px-3">
            <div class="row">
                <div class="col-lg-6 p-2"><img class="img-fluid" src="~/Template/images/illustrations/hello3.svg" alt="hello" /></div>
                <div class="col-lg-6">
                    @foreach(var f in Model){
                    <div class="mt-5">
                        <p class="lead text-uppercase mb-1">Merhaba!</p>
                        <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">Ben @f.Name</h1>
                        <p class="lead fw-normal mt-3" data-aos="fade-up" data-aos-delay="100">@f.Department</p>
                        <div class="social-nav" data-aos="fade-up" data-aos-delay="200">
                            <nav role="navigation">
                                <ul class="nav justify-content-left">
                                   @await Component.InvokeAsync("SocialMediaList")
                                </ul>
                            </nav>
                        </div>
                    
                    </div>
               }
                
                </div>
            </div>
        </div>
    </div>
    <div class="wave-bg"></div>
</header>