@model Contact

<div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Bana Ulaşın!</h2>
        </div>
        <div class="row">
           @await Html.PartialAsync("SendMessage")
            <div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
                <div class="mt-3 px-1">
                    <div class="h5">Benimle nasıl iletişime geçebilirsiniz?</div>
                  <p>@Model.Description</p>
                </div>
                <div class="mt-53 px-1">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="pb-1">E-mail:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@Model.About.Email</div>
                        </div>
                       
                        <div class="col-sm-2">
                            <div class="pb-1">Telefon:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@Model.About.Phone</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>