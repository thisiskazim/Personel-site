@model ContactMessage
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card mt-5 p-3">
        <div class="card-body">
            <h4 class="card-title">Mesaj</h4>
         
            <form class="forms-sample">
               
                    <input asp-for="ContactMessageID" type="text" class="form-control" hidden>
             
                <div class="form-group">
                    <label>Adı</label>
                    <input asp-for="Name" type="text" class="form-control" enabled>
                </div>
                <div class="form-group">
                    <label >Email</label>
                    <input asp-for="Mail" type="email" class="form-control">
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    <textarea asp-for="Content" type="text" class="form-control"  ></textarea>
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input asp-for="Date" type="date" class="form-control" >
                </div>
               
               
      
            </form>
        </div>
    </div>
</div>

