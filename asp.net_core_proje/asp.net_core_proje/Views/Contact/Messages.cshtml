
@model List<ContactMessage>

@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card mt-5 ">
        <div class="card-body">
            <h2 class="card-title">Mesajlar</h2>
          
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                              <th>#</th>
                            <th> Adı </th>
                            <th> Mail </th>
                            <th> Mesaj </th>
                            <th> Tarih </th>
                            <th> Görüntüle </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var i in Model)
                        {
                             <tr>
                                 <td>@i.ContactMessageID</td>
                            <td>@i.Name </td>
                            <td>@i.Mail </td>
                                @if(i.Content.Length > 30)
                                {
                                    <td>@i.Content.Substring(0,30)<span>...</span> </td>
                                }
                                else
                                {
                                    <td>@i.Content </td>
                                }
                                
                               <td>@i.Date</td>
                                <td><a class="btn btn-outline-info" href="/contact/details/@i.ContactMessageID">Mesajı Gör</a></td>
                                <td><a class="btn btn-outline-danger" href="/contact/delete/@i.ContactMessageID">Sil</a></td>

                        </tr>


                        }
                       
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
