
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Portfolio>


@await Html.PartialAsync("_LinkScript")

<body id="table-body">
    <div class="container-xl mt-5 p-5">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                  
                    <a href="/Portfolio/Add" class="btn btn-success">Yeni Kayıt Ekle</a>
                    <div class="row">
                        <div class="col-sm-8"><h2><b>Portfolyo</b></h2></div>
                        <div class="col-sm-4">
                            <div class="search-box">
                                <i class="material-icons">&#xE8B6;</i>
                                <input type="text" class="form-control" placeholder="Search&hellip;">
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Proje Name</th>
                            <th>Departman</th>
                            <th>Küçük Resim</th>
                            <th>Büyük Resim</th>
                            <th>Proje Link</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PortfolioID</td>
                                <td>@item.WebName</td>
                                <td>@item.Department</td>
                                <td><img width="100px" height="100px" src="@item.BigImageUrl"/></td>
                                <td><img width="100px" height="100px" src="@item.SmallImageUrl" /></td>
                                <td>@item.WebUrl</td>
                               


                                <td>

                                    <a href="/Portfolio/Update/@item.PortfolioID" class="edit" title="Güncelle" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                    <a href="/Portfolio/Delete/@item.PortfolioID" class="delete" onclick="return confirm('Silmek istediğinize emin misiniz?')" title="Sil" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>

     
            </div>
        </div>
    </div>
</body>