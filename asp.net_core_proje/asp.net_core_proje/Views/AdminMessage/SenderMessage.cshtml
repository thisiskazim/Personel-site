@model List<WriterMessage>

@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card mt-5 ">
        <div class="card-body">
            <h2 class="card-title">Gönderilen Mesajlar</h2>

            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th> Alıcı Mail </th>
                            <th> Konu </th>
                            <th> Mesaj</th>
                            <th> Tarih </th>
                            <th> Görüntüle </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.WriterMessageID</td>
                                <td>@i.Receiver </td>
                                <td>@i.Object </td>
                                @if (i.MessageContent.Length > 30)
                                {
                                    <td>@i.MessageContent.Substring(0,30)<span>...</span> </td>
                                }
                                else
                                {
                                    <td>@i.MessageContent </td>
                                }

                                <td>@i.Date</td>
                                <td><a class="btn btn-outline-info" href="/AdminMessage/DetailsSend/@i.WriterMessageID">Mesajı Gör</a></td>
                                <td><a class="btn btn-outline-danger" href="@Url.Action("Delete", new { id = i.WriterMessageID, returnUrl = "/AdminMessage/SenderMessage" })">Sil</a></td>

                            </tr>   


                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
