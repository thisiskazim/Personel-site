
@model WriterMessage
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card mt-5 p-3">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detay</h4>

            <form class="forms-sample">

                <input asp-for="WriterMessageID" type="text" class="form-control" hidden>

                <div class="form-group">
                    <label>Kime</label>
                    <input asp-for="Receiver" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    <textarea asp-for="Object" type="text" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    <textarea asp-for="MessageContent" type="text" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input asp-for="Date" type="date" class="form-control">
                </div>

            </form>
        </div>
    </div>
</div>

