
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="content-wrapper">
	<div class="row">
		<div class="col-md-12 grid-margin">
			<div class="row">
				<div class="col-12 col-xl-8 mb-4 mb-xl-0">
					@if( @ViewBag.v1 == "admin")
					{
						<h3 class="font-weight-bold mb-3">Hoşgeldin @ViewBag.v1</h3>
						<a class="nav-link" href="/admin/dashboard/index">Admin Panel</a>
					}
					else
					{
						<h3 class="font-weight-bold">Hoşgeldin @ViewBag.v1</h3>
					}
					
				</div>
				<div class="col-12 col-xl-4">
					<div class="justify-content-end d-flex">
						<div class="flex-md-grow-1 flex-xl-grow-0">
							@DateTime.Now.Date
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 grid-margin stretch-card">
			<div class="card tale-bg">
				<div class="card-people mt-auto">
					<img src="~/skydash-free-bootstrap-admin-template-main/template/images/dashboard/people.svg" alt="people">
					<div class="weather-info">
						<div class="d-flex">
							<div>
								<h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.v6<sup>C</sup></h2>
							</div>
							<div class="ml-2">
								<h4 class="location font-weight-normal">@ViewBag.v7</h4>
							
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-6 grid-margin transparent">
			<div class="row">
				<div class="col-md-6 mb-4 stretch-card transparent">
					<div class="card card-tale">
						<div class="card-body">
							<p class="mb-4">Gelen Mesajlar</p>
							<p class="fs-30 mb-2">@ViewBag.v4</p>

						</div>
					</div>
				</div>
				<div class="col-md-6 mb-4 stretch-card transparent">
					<div class="card card-dark-blue">
						<div class="card-body">
							<p class="mb-4">Giden mesajlar</p>
							<p class="fs-30 mb-2">@ViewBag.v5</p>

						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
					<div class="card card-light-blue">
						<div class="card-body">
							<p class="mb-4">Kullanıcı Sayısı</p>
							<p class="fs-30 mb-2">@ViewBag.v3</p>

						</div>
					</div>
				</div>
				<div class="col-md-6 stretch-card transparent">
					<div class="card card-light-danger">
						<div class="card-body">
							<p class="mb-4">Duyuru Adedi</p>
							<p class="fs-30 mb-2">@ViewBag.v2</p>
							<p>0.22% (30 days)</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

