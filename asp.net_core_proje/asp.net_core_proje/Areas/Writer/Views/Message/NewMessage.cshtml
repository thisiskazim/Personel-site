@model WriterMessage
@{
  
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

		<form method="post" class="form-group mt-5">
			<div class="form-group"
		<input asp-for="WriterMessageID" type="text" class="form-control" hidden disabled readonly>
		<input asp-for="Sender" type="text" class="form-control" hidden>
	</div>



			<div class="form-group">
				<label>Kime</label>
				<input asp-for="Receiver" type="email" class="form-control">
				<span asp-validation-for="Receiver"></span>
			</div>
			<div class="form-group">
				<label>Konu</label>
				<input asp-for="Object" type="text" class="form-control">
			</div>
			<div class="form-group">
				<label>Tarih</label>
				<input asp-for="Date" type="date" class="form-control" disabled />
			</div>

			<div class="form-group">
				<label>Mesaj</label>
				<textarea asp-for="MessageContent" class="form-control"></textarea>
			</div>
			<button class="form-group btn btn-primary">Gönder</button>
		</form>




