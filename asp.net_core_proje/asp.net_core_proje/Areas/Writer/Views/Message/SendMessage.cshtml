@model List<WriterMessage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string color = "";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Gönderilen Mesajlar</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kime</th>
                                    <th>Mesaj</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                              
                                    <tr>
                                        <td>@item.WriterMessageID</td>
                                        <td>@item.Receiver</td>
                                        <td>
                                            @if (item.MessageContent.Length > 30)
                                            {
                                                @item.MessageContent.Substring(0, 30)<span>...</span>
                                                // İçeriği 30 karaktere kısalt

                                            } 
                                            else
                                            {
                                                @item.MessageContent
                                                // 30 karakterden azsa içeriği tam olarak göster
                                            }
                                           
                                        </td>
                                        <td>@(((item.Date.ToString("dd.MMM.yyyy"))))</td>
                                        <td><a href="DetailsSendMessage/@item.WriterMessageID" class="btn btn-outline-primary">Detaylar</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>