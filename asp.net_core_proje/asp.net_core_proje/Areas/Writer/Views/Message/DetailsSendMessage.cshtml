@model WriterMessage
@{
    ViewData["Title"] = "DetailsSendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<form>
    <div class="form-group">
 
        <input asp-for="WriterMessageID" type="text" class="form-control" hidden>
    </div>
    <div class="form-group">
        <label>Kime</label>
        <input asp-for="Receiver" type="text" class="form-control" readonly>
    </div>
  <div class="form-group">
    <label>Konu</label>
        <input asp-for="Object" type="text" class="form-control" readonly>
  </div>
    <div class="form-group">
        <label>Tarih</label>
        <input asp-for="Date" type="text" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        <textarea asp-for="MessageContent" class="form-control" readonly></textarea>
    </div>
  </form>
