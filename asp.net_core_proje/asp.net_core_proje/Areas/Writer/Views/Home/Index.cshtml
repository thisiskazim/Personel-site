
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    string color = "";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Duyurular</h4>
              
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model )
                                {
                                    @if (@item.Status == "Yazı")
                                    {
                                        color = "badge badge-danger";
                                    }
                                    @if (@item.Status == "Video")
                                    {
                                        color = "badge badge-success";
                                    }
                                    @if (@item.Status == "Kamp")
                                    {
                                        color = "badge badge-primary";
                                    }
                                    <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Title</td>
                                    <td>@(((item.Date.ToString("dd.MMM.yyyy"))))</td>
                                    <td><label class="@color">@item.Status</label></td>
                                        <td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>
                                </tr>
                                }
                              
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>